{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021,
        "sourceType": "module"
	},
	"rules": {
		"no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1, "maxBOF": 0 }],
        "indent": ["error", "space"],
        "no-console": "warn",
        "no-var": "error",
        "quotes": ["error", "double"]
	}
}